{
  "name": "typescript-boilerplate",
  "version": "1.0.0",
  "description": "Typescript + GraphQL + Docker + Eslint Boilerplate",
  "main": "build/index.js",
  "scripts": {
    "start:dev": "nodemon",
    "build": "rimraf ./build && tsc",
    "start": "npm run build && npm run copyFiles && node build/index.js",
    "copyFiles": "copyfiles -u 1 src/schemas/*.graphql src/schemas/**/*.graphql build",
    "lint": "eslint . --ext .ts"
  },
  "author": "Kenny Vallejo",
  "license": "ISC",
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/chai": "^4.2.11",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/graphql": "^14.5.0",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "copyfiles": "^2.2.0",
    "eslint": "^6.8.0",
    "nodemon": "^2.0.3",
    "rimraf": "^3.0.2",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "apollo-server": "^2.12.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "graphql": "^15.0.0",
    "graphql-import": "^1.0.2",
    "morgan": "^1.10.0"
  }
}
